<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <!-- PostgreSQL extensions set up -->
    <changeSet id="1" author="new-dummy-user">
        <sql>CREATE EXTENSION IF NOT EXISTS "pgcrypto";</sql>
        <sql>CREATE EXTENSION IF NOT EXISTS "uuid-ossp";</sql>
    </changeSet>

    <!-- "bot" table creation -->
    <changeSet id="2" author="new-dummy-user">
        <createTable tableName="bot">
            <column name="id" type="UUID" defaultValueComputed="uuid_generate_v4()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="token_encrypted" type="BYTEA">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Encryption / decryption functions creation -->
    <changeSet id="3" author="new-dummy-user">
        <sql>
            CREATE OR REPLACE FUNCTION encrypt_data(p_key TEXT, p_value TEXT) RETURNS BYTEA AS $$
            BEGIN
            RETURN pgp_sym_encrypt(p_value, p_key);
            END
      $$ LANGUAGE plpgsql VOLATILE;
        </sql>
        <sql>
            CREATE OR REPLACE FUNCTION decrypt_data(p_key TEXT, p_value BYTEA) RETURNS TEXT AS $$
            BEGIN
            RETURN pgp_sym_decrypt(p_value, p_key);
            END
      $$ LANGUAGE plpgsql VOLATILE;
        </sql>
    </changeSet>

</databaseChangeLog>
